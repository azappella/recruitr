{
  "manifest_version": 2,

  "name": "Recruitr",
  "description": "This extension scrapes candidate profiles and adds them to a Google spreadsheet",
  "version": "1.1",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "identity",
    "activeTab",
    "https://ajax.googleapis.com/",
    "https://apis.google.com/",
    "*://*.google.com/*"
  ],
  "oauth2": {
    "client_id": "275044223000-20gighfpfbt23i29v5ktge8o8ehugp7h.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/drive",
      "https://content.googleapis.com/drive"
    ]
  },
  "content_security_policy": "script-src 'self' https://apis.google.com; object-src 'self'",
  "background": {
    "scripts": [
    ]
  }
}